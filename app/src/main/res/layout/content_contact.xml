<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.jianchi.fsp.buddhismnetworkradio.activity.ContactActivity"
    tools:showIn="@layout/activity_contact">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                app:srcCompat="@mipmap/ic_launcher" />

            <com.beardedhen.androidbootstrap.BootstrapLabel
                android:id="@+id/version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Head5"
                app:bootstrapBrand="danger"
                app:bootstrapHeading="h5"
                app:roundedCorners="true" />

            <com.beardedhen.androidbootstrap.BootstrapButtonGroup
                android:id="@+id/bbutton_group_other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="24dp"
                android:orientation="vertical"
                app:bootstrapBrand="secondary"
                app:bootstrapSize="lg"
                app:roundedCorners="true">

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/bt_site"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="left"
                    android:text="@string/gfwz"
                    app:badgeText="@string/site_url" />

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/bt_facebook"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="left"
                    android:text="@string/facebook"
                    app:badgeText="@string/facebook_url" />

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/bt_facebook2"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="left"
                    android:text="@string/facebook"
                    app:badgeText="@string/facebook_url2" />

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/bt_xlwb"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="left"
                    android:text="@string/xlwb"
                    app:badgeText="@string/xlwb_url" />

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/bt_line"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="left"
                    android:text="@string/line"
                    app:badgeText="@string/line_url" />

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/bt_dzxx"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="left"
                    android:text="@string/czxx"
                    app:badgeText="@string/dzxx_url" />

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="left"
                    android:text="@string/wxh"
                    app:badgeText="amtbhz" />

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/bt_devxx"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="left"
                    android:text="@string/devxx"
                    app:badgeText="@string/devxx_url" />

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/bt_invite_friends"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="left"
                    android:text="@string/bt_invite_friends" />
            </com.beardedhen.androidbootstrap.BootstrapButtonGroup>

            <ImageView
                android:layout_width="258dp"
                android:layout_height="258dp"
                android:layout_gravity="center"
                android:layout_margin="48dp"
                android:src="@drawable/weixin" />

            <ImageView
                android:layout_width="258dp"
                android:layout_height="258dp"
                android:layout_gravity="center"
                android:layout_marginBottom="48dp"
                android:src="@drawable/hhw" />

        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/proBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
